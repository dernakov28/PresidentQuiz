<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:entries="@array/num_questions"
        android:entryValues="@array/num_questions"
        android:key="pref_numQuestions"
        android:title="@string/num_questions"
        android:summary="@string/num_questions_description"
        android:persistent="true"
        android:defaultValue="10" />

    <ListPreference
        android:entries="@array/num_answers"
        android:entryValues="@array/num_answers"
        android:key="pref_numAnswers"
        android:title="@string/num_answers"
        android:summary="@string/num_answers_description"
        android:persistent="true"
        android:defaultValue="4" />
</PreferenceScreen>